---
const { provider } = Astro.props;
const { cert } = Astro.props;
---
<div>
    <p class="font-regular dim">{provider}</p>
    <h5 class="font-big bold timeline">{cert}</h5>
    <slot />
</div>
<style>
    div {
        padding-left: var(--margin-l);
    }
    .timeline {
        position: relative;
    }
    .timeline:before {
        position: absolute;
        content: '';
        width: 16px;
        height: 16px;
        background-color: var(--accent-color);
        border-radius: 50%;
        z-index: 100;
        left: calc((var(--margin-l) * -1) - 8px - 2.5px); /* (margin) - (half of the circle width) - (half of line width) */
        top: 8px;
    }
</style>