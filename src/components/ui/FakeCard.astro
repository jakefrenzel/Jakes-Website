---
const { title, text } = Astro.props;
---

<a class="contact-card">
    <div class="icon">
        <slot />
    </div>
    <div class="card-info">
        <p class="font-h4">{title}</p>
        <p class="font-regular">{text}</p>
    </div>
</a>

<style>
    a {
        display: flex;
        color: var(--text-color);
        background-color: var(--bg-color);
        border: 1px solid transparent;
        border-radius: 1rem;
        height: 125px;
        width: 35%;
        border-radius: 1rem;
        padding: var(--margin-m);
        text-decoration: none;
        flex-direction: row;
    }
    .icon {
        display: flex;
        width: 45px;
        height: 45px;
        background-color: transparent;
        border-radius: 0.5rem;
        justify-content: center;
        align-items: center;
    }
    .card-info {
        padding-left: var(--margin-l);
    }
    p {
        color: transparent;
    }
</style>