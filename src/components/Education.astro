<section>
    <h4 class="font-h4">Education</h4>
    <div class="content">
        <p class="font-regular">Grand Canyon University</p>
        <h5 class="font-big bold accent">Bachelor's degree in Cybersecurity</h5>
        <div class="inline spaced dim">
            <p class="font-regular">Phoenix, AZ</p>
            <span class="font-regular">Sept. 2023 - Present</span>
        </div>
    </div>
</section>
<style>
    section {
        display: flex;
        flex-direction: column;
        width: 50%;
        height: auto;
        margin: 0 auto;
        background-color: var(--bg-color);
        border: 1px solid var(--text-color);
        border-radius: 1rem;
        padding: var(--margin-m);
        margin-top: var(--margin-xl);
    }
    .content {
        display: flex;
        flex-direction: column;
        border-left: 5px solid var(--accent-color);
        padding-left: var(--margin-m);
        margin-top: var(--margin-l);
    }
    h5 {
        margin-top: var(--margin-xxs);
    }
    div p:last-child {
        margin-top: var(--margin-m);
    }
    @media (max-width: 1360px) {
        section {
            width: 60%
        }
    }
    @media (max-width: 1135px) {
        section {
            width: 70%
        }
    }
    @media (max-width: 972px) {
        section {
            width: 80%
        }
    }
    @media (max-width: 852px) {
        section {
            width: 90%
        }
    }
</style>